<div class="col-xs-6 col-xs-offset-3 session-box">
  <h2>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <% if devise_error_messages!.present? %>
      <h6 class = 'alert alert-danger' role = 'alert' style = 'width: auto;'><%= devise_error_messages! %></h6>
    <% end %>
    <br />
    <div class="field">
      <%= f.email_field :email, placeholder: "Email", class: "form-control", autofocus: true %>
    </div>
    <br />
    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: "btn btn-info" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
