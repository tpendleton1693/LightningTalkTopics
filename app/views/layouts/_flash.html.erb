<% if notice.present? %>
  <div class="alert alert-info col-xs-4 col-xs-offset-4 text-center" role = 'alert' style="margin-top: 40px; margin-bottom: -20px;">
    <h5><%= notice %></h5>
  </div>
<% end %>

<% if alert.present? %>
  <div class="alert alert-danger col-xs-4 col-xs-offset-4 text-center" role = 'alert' style="margin-top: 40px; margin-bottom: -20px;">
    <h5><%= alert %></h5>
  </div>
<% end %>
